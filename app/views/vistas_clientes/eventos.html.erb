<!doctype html>
<html lang="es">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'styles.css' %>

    <title>Dulce Capricho</title>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <a class="navbar-brand" href="./index.html">Dulce Capricho</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aira-controls="navbarNavDropdown" aira-expanded="false" aira-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item"><a class="nav-link" href="./encargos.html">Encargos</a></li>
                <li class="nav-item active"><a class="nav-link" href="./eventos.html">Eventos</a></li>
                <li class="nav-item"><a class="nav-link" href="./politica_y_condiciones.html">Política y Condiciones</a>
                </li>
                <li class="nav-item"><a class="nav-link" href="./contacto.html">Contacto</a></li>
            </ul>
        </div>
    </nav>

    <!-- Jumbotron clasico -->
    <div class="jumbotron">
        <h1><a href="./index.html"> Dulce Capricho </a></h1>
    </div>

    <% @eventos.each do |evento| %>

    <div class="text-center">   
        <h2 class="text-center"> <%= evento.nombre %> </h2>
        <p class="text-center text-justify col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8" ><%= evento.descripcion %></p>
    </div>

    <div id="carouselControls<%= evento.nombre %>" class="col-sm-12 offset-md-1 col-md-10 offset-lg-2 col-lg-8 carouselImg carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselControls" data-slide-to="0" class="active"></li>
                <li data-target="#carouselControls" data-slide-to="1"></li>
                <li data-target="#carouselControls" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <%= image_tag evento.img1, :class => "d-block w-100", :title => evento.nombre, :alt => evento.nombre %>
                </div>
                <div class="carousel-item">
                    <%= image_tag evento.img2, :class => "d-block w-100", :title => evento.nombre, :alt => evento.nombre %>
                </div>
                <div class="carousel-item">
                    <%= image_tag evento.img3, :class => "d-block w-100", :title => evento.nombre, :alt => evento.nombre %>
                </div>
            </div>

            <a class="carousel-control-prev" href="#carouselControls<%= evento.nombre %>" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="carousel-control-next" href="#carouselControls<%= evento.nombre %>" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    <% end %>

    <footer>
        <div class="row">
            <div class="col-md-4 d-flex flex-column text-center text-md-left">
                <a href="https://www.facebook.com" target="_blank">Facebook</a>
                <a href="https://www.twitter.com" target="_blank">Twitter</a>
                <a href="https://www.instagram.com" target="_blank">Instagram</a>
            </div>
            <div class="col-md-4 d-flex flex-column text-center">
                <address>
                    <h3>Oficina central</h3>
                    <p class="p-footer">Direccion, Provincia, España</p>
                    <p class="p-footer">+555 55 55 55</p>
                    <p class="p-footer">dulcecaprichobyana@gmail.com</p>
                </address>
            </div>
            <div class="col-md-4 d-flex flex-column text-center text-md-right">
                <a href="./index.html">Inicio</a>
                <a href="./encargos.html">Encargos</a>
                <a href="./eventos.html">Eventos</a>
                <a href="./politica y condiciones.html">Política y Condiciones</a>
                <a href="./contacto.html">Contacto</a>
            </div>
        </div>
    </footer>

    <!-- Optional JavaScript; jQuery, Popper.js, and Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
        integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
        crossorigin="anonymous"></script>
    
</body>

</html>