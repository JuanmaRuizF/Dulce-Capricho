        <h1>Realiza un pedido</h1>

        <form method="POST" action="/crearpedido" accept-charset="UTF-8" role="form" id="crearpedido" name="crearpedido" enctype="multipart/form-data">
            
            <!-- Protección CSRF -->
            <%= token_tag nil %>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="nombre">Nombre</label>
                    <input type="text" required name="nombre" class="form-control" id="nombre" placeholder="Ingrese su nombre" pattern="^(?![\s.]+$)[a-zA-Z\s.]*$" />
                </div>
                <div class="form-group col-sm-6">
                    <label for="apellido">Apellido</label>
                    <input type="text" name="apellido" required class="form-control" id="apellido" placeholder="Ingrese su apellido" pattern="^(?![\s.]+$)[a-zA-Z\s.]*$" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-6">
                    <label for="email">Email</label>
                    <input type="email" name="email" required class="form-control" id="email" placeholder="Ingrese su email" />
                </div>
                <div class="form-group col-sm-6">
                    <label for="email">Teléfono</label>
                    <input type="text" name="telefono" required class="form-control" id="telefono" placeholder="Ingrese su teléfono" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-9">
                    <label for="domicilio">Domicilio</label>
                    <input type="text" name="domicilio" required class="form-control" id="domicilio" placeholder="Ingrese su domicilio" />
                </div>
                <div class="form-group col-sm-3">
                    <label for="codigo postal">Codigo postal</label>
                    <input type="text" name="CP" required class="form-control" id="CP" placeholder="Ingrese su codigo postal" />

                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-sm-2">
                    <label for="fecha">Fecha de entrega</label>
                    <input type="text" name="fechaEntrega" required class="form-control" id="fecha" placeholder="00/00/0000" pattern="^(?:(?:31(\/|-|\.)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/|-|\.)(?:0?[13-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/|-|\.)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$"
                    />
                </div>
            </div>

            <div class="form-group">
                <label for="comentario">Comentario</label>
                <textarea id="comentario" name="comentario" rows="5" class="form-control"></textarea>
            </div>

            <fieldset disabled>
            <div class="form-group">
                <label for="tupedido1">Tu pedido:</label>
                <textarea id="tupedido1" name="tuPedido1" rows="10" class="form-control"></textarea>
            </div>
            </fieldset>  

            <input id="tupedido" type="hidden" name="tuPedido" rows="10" class="form-control"> 
             
            
            <button type="submit" class="btn btn-info">Guardar</button>
        </form>
