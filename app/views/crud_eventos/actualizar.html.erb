<!doctype html>
<html lang="es">

<head>
    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'styles.css' %>

    <title>Editar un evento</title>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aira-controls="navbarNavDropdown" aira-expanded="false" aira-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item "><a class="nav-link" href="/index/admin">Menú</a></li>
                <li class="nav-item "><a class="nav-link" href="/eventos/index">Eventos</a></li>

            </ul>
            <a class="navbar-text nav-link nav-item" href="../../logout">Salir</a>
        </div>
    </nav>

    <!-- Jumbotron clasico -->
    <div class="jumbotron loginJumbotron">
        <h1> Dulce Capricho </h1>
    </div>
    
    <div class="container">
        <br>
        <h1>Actualizar evento</h1>
        <hr>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" ><a href="/index/admin">Menú</a></li>
                <li class="breadcrumb-item" ><a href="/eventos/index">Eventos</a></li>
                <li class="breadcrumb-item active"aria-current="page">Editar</li>
            </ol>
        </nav>
        <hr>
        <% @eventos.each do |eventos| %>
        
            <form method="POST" action="/eventos/editar/<%= eventos.id %>" accept-charset="UTF-8" role="form" id="actualizarevento" name="actualizarevento" enctype="multipart/form-data">
        
            <!-- Protección CSRF -->
            <%= token_tag nil %> 
        
                <div class="row">
                    <div class="col-md-12">
                        
                        <div class="form-group">
                            <label for="nombre" class="negrita">Nombre:</label>
                            <div>
                                <input class="form-control" placeholder="Evento" name="nombre" type="text" id="nombre"  value="<%= eventos.nombre %>" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="descripcion" class="negrita">Descripcion:</label>
                            <div>
                                <input class="form-control" placeholder="descripcion" name="descripcion" type="text" id="descripcion" value="<%= eventos.descripcion %>" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="img1" class="negrita">Selecciona una imagen:</label>
                            <div>
                                <input class="form-control" type="file" name="img1" id="img1" >
                                <br>
                                <br> Imagen Actual:
                                <br>
                                <br>
                                <%= image_tag eventos.img1, :class => "img-fluid", :title => eventos.nombre, :alt => eventos.nombre %>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="img2" class="negrita">Selecciona una imagen:</label>
                            <div>
                                <input class="form-control" type="file" name="img2" id="img2" >
                                <br>
                                <br> Imagen Actual:
                                <br>
                                <br>
                                <%= image_tag eventos.img2, :class => "img-fluid", :title => eventos.nombre, :alt => eventos.nombre %>

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="img3" class="negrita">Selecciona una imagen:</label>
                            <div>
                                <input class="form-control" type="file" name="img3" id="img3" >
                                <br>
                                <br> Imagen Actual:
                                <br>
                                <br>
                                <%= image_tag eventos.img3, :class => "img-fluid", :title => eventos.nombre, :alt => eventos.nombre %>

                            </div>
                        </div>
                        

                        <button type="submit" class="btn btn-info">Guardar</button>
                        <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>

                        <br>
                        <br>


                    </div>
                </div>
            </form>
        
        <% end %>
    </div>
    <!-- Optional JavaScript; jQuery, Popper.js, and Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>


</body>
</html>