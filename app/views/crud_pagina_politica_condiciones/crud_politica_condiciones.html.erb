<!doctype html>
<html lang="es">

<head>
    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'styles.css' %>

    <title>Edición Politicas</title>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aira-controls="navbarNavDropdown" aira-expanded="false" aira-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item "><a class="nav-link" href="/index/admin">Menú</a></li>
                <li class="nav-item "><a class="nav-link" href="/crud_pagina_politica_condiciones/menu_pagina_politica_condiciones">Politica y Condiciones</a></li>
            </ul>
            <a class="navbar-text nav-link nav-item" href="../../logout">Salir</a>
        </div>
    </nav>

    <!-- Jumbotron clasico -->
    <div class="jumbotron loginJumbotron">
        <h1> Dulce Capricho </h1>
    </div>
    
    <div class="container">
        <br>
        <h1>Actualizar Políticas</h1>
        <hr>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" ><a href="/index/admin">Menú</a></li>
                <li class="breadcrumb-item" ><a href="/crud_pagina_politica_condiciones/menu_pagina_politica_condiciones">Menú Pólitica y Condiciones</a></li>
                <li class="breadcrumb-item active"aria-current="page">Editar</li>
            </ol>
        </nav>
        <hr>
        <% if flash[:notice] %>
            <div class="alert alert-success" role="alert" id="notice" class="notice">
                <%= flash[:notice] %>                                    
            </div>
        <% end %>
        <div class="row">  

            <% @politicas.each do |politica| %>
                <div class="col-sm-12 col-md-6">
                    <div class="card card-pyc text-center">
                        <div class="card-header">
                            <h3 class="card-title"> <%= politica.titulo%> </h3>
                        </div>
                        <div class="card-body">
                            <p1 class="card-text"> <%= politica.descripcion%> </p1>
                        </div>
                    </div>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal<%=politica.id%>">Editar</button>
                    <br>
                    <br>
                </div>
            
            <div class="modal fade" id="Modal<%=politica.id%>" tabindex="-1" role="dialog" aria-labelledby="ModalLabel<%=politica.id%>" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ModalLabel<%=politica.id%>">Editar</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form method="POST" action="/crud_pagina_politica_condiciones/editarPol/<%=politica.id%>" accept-charset="UTF-8" role="form" id="editar<%=politica.id%>" name="editar<%=politica.id%>" enctype="multipart/form-data">

                                <!-- Protección CSRF -->
                                <%= token_tag nil %> 

                                <label for="nombre" class="negrita">Nuevo nombre:</label>
                                <div>
                                    <input type="text" required class="form-control" id="titulo" name="titulo" value="<%= politica.titulo %>" placeholder="Titulo" />
                                    <br><input type="text" required class="form-control" id="descripcion" name="descripcion" value="<%= politica.descripcion %>" placeholder="Descripcion" />
                                </div>
                                <br>

                                <button type="submit" class="btn btn-info">Guardar</button>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                            </form>
                        </div>
            
                    </div>
                </div>
            </div>
            <% end %>
        </div>
    </div>
    <!-- Optional JavaScript; jQuery, Popper.js, and Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>


</body>
</html>
