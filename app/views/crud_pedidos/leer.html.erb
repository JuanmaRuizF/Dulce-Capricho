<!doctype html>
<html lang="es">

<head>
    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'styles.css' %>

    <title>Leer pedidos</title>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aira-controls="navbarNavDropdown" aira-expanded="false" aira-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item "><a class="nav-link" href="/index/admin">Menú</a></li>
                <li class="nav-item "><a class="nav-link" href="/pedidos/index">Pedidos</a></li>

            </ul>
            <a class="navbar-text nav-link nav-item" href="../../logout">Salir</a>
        </div>
    </nav>

    <!-- Jumbotron clasico -->
    <div class="jumbotron loginJumbotron">
        <h1> Dulce Capricho </h1>
    </div>

    <div class="container">

        <br>
        <h1>Ver detalles del pedido</h1>
        <hr>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" ><a href="/index/admin">Menú</a></li>
                <li class="breadcrumb-item" ><a href="/pedidos/index">Pedidos</a></li>
                <li class="breadcrumb-item active"aria-current="page">Detalles</li>
            </ol>
        </nav>
        <hr>

        <% @pedidos.each do |pedidos| %>

            <form method="POST" action="/pedidos/editar/<%= pedidos.id %>" accept-charset="UTF-8" role="form" id="actualizarpedido" name="actualizarpedido" enctype="multipart/form-data">

                <!-- Protección CSRF -->
                <%= token_tag nil %> 

                <div class="row">
                    <div class="col-md-12">

                        <fieldset disabled>
                            
                            
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="nombre">Nombre</label>
                                    <input type="text" required class="form-control" id="nombre" name="nombre" value="<%= pedidos.nombre %>" placeholder="Ingrese su nombre" pattern="^(?![\s.]+$)[a-zA-Z\s.]*$" />
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="apellido">Apellido</label>
                                    <input type="text" required class="form-control" id="apellido" name="apellido"  value="<%= pedidos.apellido %>" placeholder="Ingrese su apellido" pattern="^(?![\s.]+$)[a-zA-Z\s.]*$" />
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="fom-group col-sm-6">
                                    <label for="email">Email</label>
                                    <input type="email" required class="form-control" name="email"  id="email" value="<%= pedidos.email %>"  placeholder="Ingrese su email" />
                                </div>
                                <div class="fom-group col-sm-6">
                                    <label for="telefono">Teléfono</label>
                                    <input type="telefono" required class="form-control" name="telefono"  id="telefono" value="<%= pedidos.telefono %>"  placeholder="Ingrese su telefono" />
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-9">
                                    <label for="domicilio">Domicilio</label>
                                    <input type="text" required class="form-control" name="domicilio"  value="<%= pedidos.domicilio %>" id="domicilio" placeholder="Ingrese su domicilio" />
                                </div>
                                <div class="form-group col-sm-3">
                                    <label for="codigo postal">Codigo postal</label>
                                    <input type="text" required class="form-control" name="CP"  id="CP" value="<%= pedidos.CP %>" placeholder="Ingrese su codigo postal" />

                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-sm-2">
                                    <label for="fecha">Fecha de entrega</label>
                                    <input type="text" required class="form-control" name="fechaEntrega" value="<%= pedidos.fechaEntrega %>" id="fechaEntrega" placeholder="00/00/0000" pattern="^(?:(?:31(\/|-|\.)(?:0?[13578]|1[02]))\1|(?:(?:29|30)(\/|-|\.)(?:0?[13-9]|1[0-2])\2))(?:(?:1[6-9]|[2-9]\d)?\d{2})$|^(?:29(\/|-|\.)0?2\3(?:(?:(?:1[6-9]|[2-9]\d)?(?:0[48]|[2468][048]|[13579][26])|(?:(?:16|[2468][048]|[3579][26])00))))$|^(?:0?[1-9]|1\d|2[0-8])(\/|-|\.)(?:(?:0?[1-9])|(?:1[0-2]))\4(?:(?:1[6-9]|[2-9]\d)?\d{2})$"/>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="comentario">Comentario</label>
                                <textarea id="comentario" name="comentario" rows="5"  class="form-control"> <%= pedidos.comentario %> </textarea>
                            </div>

                            <div class="form-group">
                                <label for="tupedido">Tu pedido:</label>
                                <textarea id="tuPedido" name="tuPedido" rows="10"" class="form-control"><%= pedidos.tuPedido %></textarea>
                            </div>
                        </fieldset>

                        <a href="/pedidos/actualizar/<%= pedidos.id %>" class="btn btn-primary">Editar</a>
                            
                        <br>
                        <br>
                    </div>
                  
                </div>
            </form>
        <% end %>
    </div>

    <!-- Optional JavaScript; jQuery, Popper.js, and Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

</body>
</html>