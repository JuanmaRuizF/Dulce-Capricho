<!doctype html>
<html lang="es">

<head>
    <!-- Required meta tags -->

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'styles.css' %>

    <title>Actualizar elemento del Footer</title>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aira-controls="navbarNavDropdown" aira-expanded="false" aira-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item "><a class="nav-link" href="/index/admin">Menú</a></li>
                <li class="nav-item "><a class="nav-link" href="/crud_footers/index">Footer</a></li>

            </ul>
            <a class="navbar-text nav-link nav-item" href="../../logout">Salir</a>
        </div>
    </nav>

    <!-- Jumbotron clasico -->
    <div class="jumbotron loginJumbotron">
        <h1> Dulce Capricho </h1>
    </div>

    <div class="container">
        <br>
        <h1> Editar pedido </h1>
        <hr>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item" ><a href="/index/admin">Menú</a></li>
                <li class="breadcrumb-item" ><a href="/crud_footers/index">Footer</a></li>
                <li class="breadcrumb-item active"aria-current="page">Editar</li>
            </ol>
        </nav>
        <hr>

        <% @footers.each do |footers| %>

            <form method="POST" action="/crud_footers/editar/<%= footers.id %>" accept-charset="UTF-8" role="form" id="actualizarpedido" name="actualizarpedido" enctype="multipart/form-data">

                <!-- Protección CSRF -->
                <%= token_tag nil %> 

                <div class="row">
                    <div class="col-md-12">
      
                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <label for="nombreizda">nombreizda</label>
                                <input type="text" class="form-control" id="nombreizda" name="nombreizda" value="<%= footers.nombreizda %>" placeholder="Ingrese su nombreizda" />
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="enlaceizda">enlaceizda</label>
                                <input type="text" class="form-control" id="enlaceizda" name="enlaceizda"  value="<%= footers.enlaceizda %>" placeholder="Ingrese su enlaceizda" />
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <label for="nombremedio">nombremedio</label>
                                <input type="text" class="form-control" id="nombremedio" name="nombremedio" value="<%= footers.nombremedio %>" placeholder="Ingrese su nombremedio" />
                            </div>
                        </div>


                        <div class="form-row">
                            <div class="form-group col-sm-6">
                                <label for="nombredcha">nombredcha</label>
                                <input type="text" class="form-control" id="nombredcha" name="nombredcha" value="<%= footers.nombredcha %>" placeholder="Ingrese su nombredcha" />
                            </div>
                            <div class="form-group col-sm-6">
                                <label for="enlacedcha">enlacedcha</label>
                                <input type="text" class="form-control" id="enlacedcha" name="enlacedcha"  value="<%= footers.enlacedcha %>" placeholder="Ingrese su apellido" />
                            </div>
                        </div>

                        <button type="submit" class="btn btn-info">Guardar</button>
                        <%= link_to 'Cancelar', url_for(:back), class: "btn btn-warning" %>

                        <br>
                        <br>

                    </div>
                </div>
            </form>
        <% end %>
    </div>

    <!-- Optional JavaScript; jQuery, Popper.js, and Bootstrap JS-->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

</body>
</html>